---
import type { Playlist } from '@/lib/data';

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, albumId, artists, owner, color, title } = playlist;

const artistsString = artists.join(', ');
---

<a
  href={`/playlist/${id}`}
  class='playlist-item flex relative p-2 w-full overflow-hidden items-center gap-5 rounded-md hover:bg-zinc-800'
>
  <picture class='size-12 flex-none'>
    <img
      src={cover}
      alt={`Cover of ${title} by ${artistsString}`}
      class='object-cover size-full rounded-md'
    />
  </picture>

  <div class='flex flex-auto flex-col w-full'>
    <h4 class='text-white'>{title}</h4>
    <span class='text-gray-400 text-sm truncate'>Playlist Â· {owner}</span>
  </div>
</a>
