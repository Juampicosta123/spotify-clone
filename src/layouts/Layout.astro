---
import { AsideMenu } from '../components/AsideMenu';
import { CurrentSongMobile } from '../components/CurrentSongMobile';
import { Player } from '../components/Player';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions fallback='none' />
  </head>
  <body>
    <div id='app' class='relative h-screen p-2 gap-2'>
      <aside class='[grid-area:aside] flex-col flex'>
        <AsideMenu client:load />
      </aside>
      <main class='[grid-area:main] rounded-lg bg-zinc-900 overflow-y-auto' >
        <slot />
      </main>
      <footer class='[grid-area:player]'>
        <CurrentSongMobile client:load transition:name='info-player' transition:persist />
        <Player client:load transition:name='media-player' transition:persist />
      </footer>
    </div>
    <style>
      #app {
        display: grid;
        grid-template-areas:
          'aside main main'
          'player player player';
        grid-template-columns: max-content 1fr;
        grid-template-rows: 1fr auto;
      }

      @media (min-width: 1024px) {
        #app {
          grid-template-columns: 22% 1fr;
        }
      }
    </style>
    <style is:global>
      .player {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
      }

      html {
        font-family: 'CircularStd', system-ui, sans-serif;
        background: #010101;
        color: white;
        width: 100vw;
        height: 100vh;
        overflow-y: hidden;
        overflow-x: hidden;
      }

      body {
        width: 100vw;
        height: 100vh;
        overflow-y: hidden;
        overflow-x: hidden;
        overflow-x: hidden;
      }

      @font-face {
        font-family: 'CircularStd';
        src: url('/fonts/CircularStd-Medium.woff2') format('woff2');
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'CircularStd';
        src: url('/fonts/CircularStd-Book.woff2') format('woff2');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'CircularStd';
        src: url('/fonts/CircularStd-Light.woff2') format('woff2');
        font-weight: 300;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'CircularStd';
        src: url('/fonts/CircularStd-Bold.woff2') format('woff2');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'CircularStd';
        src: url('/fonts/CircularStd-Black.woff2') format('woff2');
        font-weight: 900;
        font-style: normal;
        font-display: swap;
      }
      ::-webkit-scrollbar {
        width: 12px;
        height: 12px;
      }

      /* Track */
      ::-webkit-scrollbar-track {
        background: transparent;
      }

      ::-webkit-scrollbar-corner {
        background: transparent;
      }

      /* Handle */
      ::-webkit-scrollbar-thumb {
        background: #555;
        height: 10px;
      }

      /* Handle on hover */
      ::-webkit-scrollbar-thumb:hover {
        background: #949494;
      }
    </style>
  </body>
</html>
